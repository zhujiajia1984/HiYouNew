/* pages/index/index.wxss */
page{
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #d9d9d9;
}
.mapView{
  position: absolute;
  left: 15px;
  bottom: 15px;
  right: 15px;
  background-color: white;
  border-radius: 5px;
  padding: 10px 15px 10px 110px;
  display: flex;
}
.infoWrapper{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
}
.infoTitle{
  font-weight: 600;
  margin-bottom: 10px;
}
.infoDesp{
  font-size: 12px;
  color: #888888;
}
.thumbView{
  position: absolute;
  left: 30px;
  bottom: 30px;
  border-radius: 5px;
}
.thumbImage{
  width: 80px;
  height: 80px;
}
.naviWrapper{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.naviSignal{
  color: #d9d9d9;
  font-size: 25px;
  margin-right: 10px;
}
.naviIcon{
  height: 15px;
  width: 15px;
  margin-bottom: 5px;
}
.naviImage{
  margin-right: 10px;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.naviDesp{
  font-size: 10px;
}