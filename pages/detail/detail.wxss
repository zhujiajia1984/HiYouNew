/* pages/detail/detail.wxss */
page{
  display: flex;
  flex-direction: column;
  background-color: #d9d9d9;
  /* height: 100%; */
}
.detailHeader{
  width: 100%;
  height: 180px;
  background-color: white;
  /* background-image: url('https://test.weiquaninfo.cn//cloudac/uploads/avatar-1522655963845.jpg'); */
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
}
.detailHeaderTools{
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
}
.detailHeaderPlay{
  flex: 1;
  display: flex;
  justify-content: center;
}
.playIcon{
  height: 40px;
  width: 40px;
}
.toolsIcon{
  margin: 10px 10px 10px 5px;
  width: 30px;
  height: 30px;
}
.firstIcon{
  margin-left: 0px;
}
.lastIcon{
  margin-right: 5px;
}
.detailHeaderFooter{
  flex: 1;
  display: flex;
  flex-direction: column-reverse;
}
.footerBody{
  background-color: black;
  opacity: 0.7;
  color: white;
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-between;
  padding: 0px 10px;
}
.detailBody{
  display: flex;
  flex-direction: column;
  margin-bottom: 10px; 
}
.detailBodyTitle{
  background-color: white;
  padding: 15px 15px;
  display: flex;
  flex-direction: row;
}
.detailBodyTitleHeader{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.detailBodyTitleFooter{
  display: flex;
  align-items: center;
}
.detailBodyTitleContent{
  font-size: 20px;
  font-weight: 400;
}
.detailBodyTitleDesp{
   font-size: 12px;
   color: #888888;
}
.detailBodyContent{
  background-color: white;
  padding: 0px 15px 5px 15px;
  font-size: 14px;
}
.detailFooter{
  /* flex:1; */
  background-color: white;
}
.detailFooterTitle{
  display: flex;
  line-height: 22px;
  color: #5BB571;
  margin-top: 5px;
  margin-bottom: 5px;
}
.detailFooterDivider{
  width: 5px;
  height: 22px;
  background-color: #5BB571;
  margin-right: 5px;
}